{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true
    },
    "exclude": [
        "node_modules",
        "build",
        "./src/**/*test.ts",
        "./src/**/test/*"
    ]
}
